{
    "tasks": [
        {
            "label": "cmake-configure-debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build-debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "cmake-build-debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build-debug",
                "-j"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "cmake-configure-debug"
        }
    ],
    "version": "2.0.0"
}